<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#223C65"
    android:fitsSystemWindows="true"
    tools:context=".ViewEntrantsActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EventEase"
        android:textColor="#223C65"
        android:textSize="28sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:background="#9EFFF1" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Back"
        android:backgroundTint="#9EFFF1"
        android:textColor="#223C65"
        android:layout_margin="12dp" />

    <!-- Selected Entrants Title Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/txtSelectedEntrantsTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Selected Entrants"
            android:textStyle="bold"
            android:textColor="#9EFFF1"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/btnMailSelected"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/notification"
            android:contentDescription="Mail Selected Entrants"
            android:layout_marginEnd="4dp"
            android:tint="#9EFFF1" />
    </LinearLayout>

    <!-- Selected Entrants Scrollable List -->

    <!-- Not Selected Entrants Title Row -->
    <ListView
        android:id="@+id/recyclerSelected"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="12dp"
        android:alpha="0.5"
        android:background="#9DBCD6"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Not Selected Entrants"
            android:textStyle="bold"
            android:textColor="#9EFFF1"
            android:textSize="22sp" />

        <!-- Mail Icon -->
        <ImageButton
            android:id="@+id/btnMailNotSelected"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/notification"
            android:contentDescription="Mail Not Selected Entrants"
            android:tint="#9EFFF1"
            android:layout_marginEnd="8dp" />

        <!-- Swap Icon -->
        <ImageButton
            android:id="@+id/btnSwapNotSelected"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/swap"
            android:contentDescription="Swap Not Selected Entrants"
            android:tint="#9EFFF1" />
    </LinearLayout>

    <!-- Not Selected Entrants Scrollable List -->
    <ListView
        android:id="@+id/recyclerNotSelected"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="12dp"
        android:background="#9DBCD6"
        android:alpha="0.5"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <!-- Final Entrants Button -->
    <Button
        android:id="@+id/finalentrant_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="View Final Entrants"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#223C65"
        android:layout_margin="12dp"
        android:backgroundTint="#9EFFF1"
        app:cornerRadius="10dp" />

    <!-- Cancelled Entrants Title Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancelled Entrants"
            android:textStyle="bold"
            android:textColor="#9EFFF1"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/btnMailCancelled"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/notification"
            android:contentDescription="Mail Cancelled Entrants"
            android:layout_marginEnd="4dp"
            android:tint="#9EFFF1" />
    </LinearLayout>

    <!-- Cancelled Entrants Scrollable List -->
    <ListView
        android:id="@+id/recyclerCancelled"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="12dp"
        android:background="#9DBCD6"
        android:alpha="0.5"
        android:padding="8dp"
        android:scrollbars="vertical" />

    <!-- Remove Cancelled Entrants Button -->
    <Button
        android:id="@+id/btnRemCancelledEntrants"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Remove Cancelled Entrants"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:backgroundTint="#F89393"
        app:cornerRadius="10dp" />

</LinearLayout>
