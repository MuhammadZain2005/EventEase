<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#122A50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#223C65"
        android:padding="16dp">

        <!-- Top Teal Band -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9EFFF1"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EventEase"
                android:textColor="#223C65"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:tint="#9EFFF1"
            android:layout_marginTop="16dp" />

        <!-- Create New Event Title -->
        <TextView
            android:id="@+id/title_create_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Event"
            android:textSize="20sp"
            android:textColor="#9EFFF1"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp" />

        <!-- Event Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/input_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter event name"
                android:backgroundTint="#9EFFF1"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0C4DE"
                android:paddingEnd="40dp"
                android:inputType="text" />

            <ImageView
                android:id="@+id/icon_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/camera"
                android:tint="#9EFFF1"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="4dp" />
        </RelativeLayout>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp">

            <EditText
                android:id="@+id/input_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter event description"
                android:backgroundTint="#9EFFF1"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0C4DE"
                android:paddingEnd="40dp"
                android:inputType="textMultiLine" />

            <ImageView
                android:id="@+id/icon_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pencil"
                android:tint="#9EFFF1"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="4dp" />
        </RelativeLayout>

        <!-- Registration Period -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Period"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp">

                <EditText
                    android:id="@+id/start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start"
                    android:backgroundTint="#9EFFF1"
                    android:textColor="#FFFFFF"
                    android:paddingEnd="40dp"
                    android:focusable="false"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/icon_calendar_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar"
                    android:tint="#9EFFF1"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End"
                    android:backgroundTint="#9EFFF1"
                    android:textColor="#FFFFFF"
                    android:paddingEnd="40dp"
                    android:focusable="false"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/icon_calendar_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar"
                    android:tint="#9EFFF1"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Geolocation & QR Switches -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Geolocation"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_geolocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#9EFFF1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QR Code"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/switch_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="#9EFFF1" />
            </LinearLayout>
        </LinearLayout>

        <!-- Number of Entrants -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of Entrants"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radio_entrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/any_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Any Number"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical">

                <RadioButton
                    android:id="@+id/specific_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specific Number"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/input_specific_number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number"
                    android:backgroundTint="#9EFFF1"
                    android:textColor="#FFFFFF"
                    android:enabled="false"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
        </RadioGroup>

        <!-- Save Changes Button -->
        <Button
            android:id="@+id/btn_save_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textStyle="bold"
            android:textColor="#122A50"
            android:backgroundTint="#9EFFF1"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="40dp" />

    </LinearLayout>
</ScrollView>
